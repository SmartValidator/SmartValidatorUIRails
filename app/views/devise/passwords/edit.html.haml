-provide(:subtitle,I18n.t('devise_own.new_password'))

#devise-box.devise-box-center
  %h2
    =I18n.t('devise_own.new_password')
  =devise_error_messages!
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
    = f.hidden_field :reset_password_token
    .field
      = f.label :password
      = f.password_field :password, autofocus: true, autocomplete: "off"
    .field
      = f.label :password_confirmation, I18n.t('activerecord.attributes.user.password_confirmation')
      = f.password_field :password_confirmation, autocomplete: "off"
    .actions
      = f.submit I18n.t('devise_own.new_password')
  = render "devise/shared/links"