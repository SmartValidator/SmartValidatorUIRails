-provide(:subtitle,I18n.t('devise_own.resend_confirmation_email'))

#devise-box.devise-box-center
  %h2=I18n.t('devise_own.resend_confirmation_email')
  =devise_error_messages!
  = form_for(resource, as: resource_name, url: user_confirmation_path, html: { method: :post }) do |f|
    .field
      = f.label :email
      = f.email_field :email, autofocus: true, :placeholder => I18n.t('activerecord.attributes.user.email')
    .actions
      = f.submit I18n.t('devise_own.resend_confirmation_email'), :class => 'btn btn-primary'
  = render "devise/shared/links"